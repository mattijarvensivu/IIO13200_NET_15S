        <TextBox x:Name="parannettavaa" HorizontalAlignment="Left" Height="63" Margin="325,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136"/>
        <Label x:Name="muutatext" Content="Muuta" HorizontalAlignment="Left" Margin="341,218,0,0" VerticalAlignment="Top" Width="120"  FontWeight="Bold" />
        <TextBox x:Name="muuta" HorizontalAlignment="Left" Height="63" Margin="325,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136"/>



    </Grid>
</Window>
